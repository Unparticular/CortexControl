<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- ================= Fractured Mind ================= -->
    <HediffDef>
        <defName>CC_FracturedMind</defName>
        <label>fractured mind</label>
        <description>The removal of a control chip has left this person's brain lacking crucial functions relating to memory and loyalty, making it incredibly difficult for them to recall or learn anything and leaving them in a permanent state of disarray. This can be cured by using a healer mech serum, or "fixed" by adding a control chip or doing brain modification surgery.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.8,0.2,0.2)</defaultLabelColor>
        <aptitudes MayRequire="Ludeon.RimWorld.Anomaly">
            <Shooting>-8</Shooting>
            <Melee>-8</Melee>
            <Construction>-16</Construction>
            <Mining>-16</Mining>
            <Cooking>-16</Cooking>
            <Plants>-16</Plants>
            <Animals>-8</Animals>
            <Crafting>-16</Crafting>
            <Artistic>-16</Artistic>
            <Medicine>-16</Medicine>
            <Social>-16</Social>
        </aptitudes>
        <stages>
            <li>
                <disabledWorkTags>
                    <li>Intellectual</li>
                </disabledWorkTags>
                <blocksInspirations>true</blocksInspirations>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.5</postFactor>
                    </li>
                </capMods>
                <socialFightChanceFactor>10</socialFightChanceFactor>
                <statFactors>
                    <GlobalLearningFactor>0.1</GlobalLearningFactor>
                    <CertaintyLossFactor MayRequire="Ludeon.RimWorld.Ideology">10</CertaintyLossFactor>
                </statFactors>
                <statOffsets>
                    <MentalBreakThreshold>0.70</MentalBreakThreshold>
                    <SocialImpact>-1</SocialImpact>
                    <NegotiationAbility>-0.90</NegotiationAbility>
                    <TradePriceImprovement>-0.9</TradePriceImprovement>
                    <ArrestSuccessChance>-0.9</ArrestSuccessChance>
                    <SuppressionPower MayRequire="Ludeon.RimWorld.Ideology">-0.9</SuppressionPower>
                    <ConversionPower MayRequire="Ludeon.RimWorld.Ideology">-0.9</ConversionPower>
                </statOffsets>
                <mentalStateGivers>
                    <li>
                        <mentalState>WanderConfused</mentalState>
                        <mtbDays>5</mtbDays>
                    </li>
                </mentalStateGivers>
                <forgetMemoryThoughtMtbDays>1</forgetMemoryThoughtMtbDays>
            </li>
        </stages>
    </HediffDef>

    <ThoughtDef>
        <defName>CC_FracturedMindThought</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>CC_FracturedMind</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
        <stages>
            <li>
                <label>fractured mind</label>
                <description>My mind is in chaos.</description>
                <baseMoodEffect>-20</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>